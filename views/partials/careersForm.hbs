<form id="career-application-form" class="none" method="post">   
    <div class="form-group column general">
        <div class="none print form-group">
            <img src="/images/DominicsLogo1.png" class="none print print-logo" alt="Dominic's Logo">
        </div>
        <h3 class="employment-application-title">Employment Application</h3>

        <div class="form-group show">
            <label for="name-input">Name:</label>
            <input id="name-input" type="text" name="name" size="50" maxlength="50"required> 

            <label id="social-security-input-label" for="social-security-input" class="none">Social Security:</label>
            <input id="social-security-input" class="none" type="text" size="27" maxlength="4"readonly>
        </div>
        
        
        
        <div class="form-group">
            <label for="address-input">Address:</label>
            <input id="address-input" type="text" name="address" size="30" maxlength="30"required>

            <label for="city-input">City:</label>
            <input id="city-input" type="text" name="city" size="20" maxlength="20"required>

            <label for="state-input">State:</label>
            <input id="state-input" type="text" name="state" size="2" maxlength="2"required>

            <label for="zip-code-input">Zip Code:</label>
            <input id="zip-code-input" type="text" name="zip-code" size="6" maxlength="6"required>    
        </div>
        
        <div class="form-group">
            <label for="phone-number-input">Phone Number:</label>
            <input id="phone-number-input" type="tel" name="phonenumber" size="12" maxlength="12"required>

            <label for="cell-number-input">Cell Number:</label>
            <input id="cell-number-input" type="tel" name="cellnumber" size="12" maxlength="12">

            <label for="email-input">Email:</label>
            <input id="email-input" type="email" name="email" size="32" maxlength="32"required>
        </div>

        <div class="form-group">
            <label for="position-input">Position Applying For:</label>
            <input id="position-input" type="text" name="position" size="20" maxlength="20"required>

            <label for="full-part-time-input"> Full or Part Time:</label>
            <input id="full-part-time-input" type="text" name="fullparttime" size="10" maxlength="10"required>

            <label for="wage-requirement-input">Wage Desired:</label>
            <input id="wage-requirement-input" type="text" placeholder="$/hr" name="wagerequirement" size="6" maxlength="6"required>
            {{!-- <label for="wage-requirement-input">/hr </label> --}}
        </div>
        
        <div class="form-group">
            <label for="first-time-input">Have you ever applied to Dominic's before?</label>
